From: Tails developers <tails@boum.org>
Date: Sat, 24 Jan 2015 16:33:56 +0000
Subject: [PATCH] Add a "Browser Downloads" persistence preset.

---
 lib/Tails/Persistence/Configuration/Button.pm  |  1 +
 lib/Tails/Persistence/Configuration/Presets.pm | 10 ++++++++++
 2 files changed, 11 insertions(+)

diff --git a/lib/Tails/Persistence/Configuration/Button.pm b/lib/Tails/Persistence/Configuration/Button.pm
index 753e898..7cf732a 100644
--- a/usr/share/perl5/Tails/Persistence/Configuration/Button.pm
+++ b/usr/share/perl5/Tails/Persistence/Configuration/Button.pm
@@ -80,6 +80,7 @@ method _build_icon_theme {
     $theme->append_search_path('/usr/share/pixmaps/cryptui/48x48');
     $theme->append_search_path('/usr/share/pixmaps/seahorse/48x48');
     $theme->append_search_path('/usr/share/icons/gnome-colors-common/32x32/apps/');
+    $theme->append_search_path('/usr/share/icons/gnome-colors-common/32x32/emblems/');
 
     return $theme;
  }
diff --git a/lib/Tails/Persistence/Configuration/Presets.pm b/lib/Tails/Persistence/Configuration/Presets.pm
index 0d9d9c2..e03711f 100644
--- a/usr/share/perl5/Tails/Persistence/Configuration/Presets.pm
+++ b/usr/share/perl5/Tails/Persistence/Configuration/Presets.pm
@@ -125,6 +125,16 @@ method _build__presets {
             icon_name   => 'user-bookmarks',
         },
         {
+            name        => $self->encoding->decode(gettext(q{Browser Downloads})),
+            description => $self->encoding->decode(gettext(
+                q{Downloads from the Tor Browser}
+            )),
+            destination => '/home/amnesia/Downloads',
+            options     => [ 'source=Downloads' ],
+            enabled     => 0,
+            icon_name   => 'emblem-downloads',
+        },
+        {
             name        => $self->encoding->decode(gettext(q{Printers})),
             description => $self->encoding->decode(gettext(
                 q{Printers configuration}

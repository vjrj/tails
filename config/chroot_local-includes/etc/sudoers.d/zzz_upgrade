tails-upgrade-frontend ALL =                             NOPASSWD: /sbin/reboot ""
tails-upgrade-frontend ALL = (debian-tor)                NOPASSWD: /usr/local/sbin/tor-has-bootstrapped ""

tails-install-iuk     ALL =                             NOPASSWD: INSTALL_IUK
